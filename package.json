{
  "name": "ptils",
  "version": "0.2.0",
  "description": "utils for package.json",
  "license": "MIT",
  "repository": "akameco/ptils",
  "author": "akameco <akameco.t@gmail.com> (akameco.github.io)",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "add-contributor": "all-contributors add",
    "fmt": "prettier --write '**/*.{js,json,md}'",
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "test:cov": "jest --coverage --ci --runInBand",
    "test:ci": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "package.json",
    "utils",
    "zero"
  ],
  "dependencies": {
    "arrify": "^1.0.1",
    "lodash.has": "^4.5.2",
    "read-pkg-up": "^3.0.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.10.1",
    "eslint": "^4.18.2",
    "eslint-config-precure": "^2.6.0",
    "flow-bin": "^0.67.1",
    "husky": "^1.3.1",
    "jest": "^22.4.2",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn flow && lint-staged"
    }
  }
}
